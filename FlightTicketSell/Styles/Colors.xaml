<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Blue -->
    <Color x:Key="Blue">#044c7a</Color>
    <SolidColorBrush x:Key="BlueBrush" Color="{StaticResource Blue}" />

    <!-- Light Blue -->
    <Color x:Key="LightBlue">#06b4f4</Color>
    <SolidColorBrush x:Key="LightBlueBrush" Color="{StaticResource LightBlue}" />

    <!--Light Gray-->
    <Color x:Key="LightGray">#DDDCDB</Color>
    <SolidColorBrush x:Key="LightGrayBrush" Color="{StaticResource LightGray}" />

    <!--Red-->
    <Color x:Key="Red">#C7282A</Color>
    <SolidColorBrush x:Key="RedBrush" Color="{StaticResource Red}" />

    <!--Green-->
    <Color x:Key="Green">#24B44C</Color>
    <SolidColorBrush x:Key="GreenBrush" Color="{StaticResource Green}" />
    <!--Orange-->
    <Color x:Key="Orange">#f96421</Color>
    <SolidColorBrush x:Key="OrangeBrush" Color="{StaticResource Orange}" />

</ResourceDictionary>
<UserControl x:Class="FlightTicketSell.Views.SellPayView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightTicketSell.Views" xmlns:vm="clr-namespace:FlightTicketSell.ViewModels" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:valueConverters="clr-namespace:FlightTicketSell.ValueConverters"
             mc:Ignorable="d" 
             d:DesignHeight="760" d:DesignWidth="1366">
    <UserControl.DataContext>
        <vm:SellPayViewModel/>
    </UserControl.DataContext>
    <Grid>
        
        
        <!-- Content -->
        <Grid>
            <Grid.RowDefinitions>
                <!-- Flight detail -->
                <RowDefinition Height="Auto" />
                <!-- Overlay airports and bill -->
                <!-- Customer and payment-->
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Flight detail -->
            <Grid Grid.Row="0" Margin="0 20 0 0">
                <Grid.ColumnDefinitions>
                    <!-- Spacing -->
                    <ColumnDefinition Width="1*" />
                    <!-- Content -->
                    <ColumnDefinition Width="8*" />
                    <!-- Spacing -->
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <!-- Content -->
                <Border Grid.Column="1"
                    CornerRadius="10"
                    Style="{StaticResource DropShadow}"
                    Padding="20"
                    Background="White"
                    HorizontalAlignment="Stretch">
                    <Grid>
                        <Grid.RowDefinitions>
                            <!-- Heading -->
                            <RowDefinition Height="Auto" />
                            <!-- Flight detail content -->
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- Heading -->
                        <TextBlock Text="Chi tiết chuyến bay" Grid.Row="0" Style="{StaticResource FieldLabelText}" HorizontalAlignment="Left" />

                        <!-- Flight detail content -->
                        <Grid HorizontalAlignment="Stretch" 
                              Grid.Row="1" 
                              TextBlock.FontFamily="{StaticResource Roboto}"
                              
                              Margin="0 10 0 0">
                            <Grid.ColumnDefinitions>
                                <!-- Flight code -->
                                <ColumnDefinition Width="2*"/>
                                <!-- Start airport -->
                                <ColumnDefinition Width="2*"/>
                                <!-- Destination airport -->
                                <ColumnDefinition Width="2*"/>
                                <!-- Depart DateTime -->
                                <ColumnDefinition Width="3*"/>
                                <!-- Flight time -->
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.Resources>
                                <Style TargetType="{x:Type StackPanel}">
                                    <Setter Property="Margin" Value="20 0" />
                                </Style>
                            </Grid.Resources>

                            <!-- Flight code -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Mã chuyến bay" Style="{StaticResource FieldLabelText}" />
                                <TextBox Text="{Binding FlightCode}" d:Text="TSNNB-8" Style="{StaticResource CustomTextbox}" />
                            </StackPanel>

                            <!-- Start airport -->
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Sân bay đi" Style="{StaticResource FieldLabelText}" />
                                <TextBox Text="{Binding StartAirport}" d:Text="Tân Sơn Nhất" Style="{StaticResource CustomTextbox}" />
                            </StackPanel>

                            <!-- Destination airport -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Sân bay đến" Style="{StaticResource FieldLabelText}" />
                                <TextBox Text="{Binding DestinationAirport}" d:Text="Nội Bài" FontFamily="{StaticResource RobotoLight}" Style="{StaticResource CustomTextbox}" />
                            </StackPanel>

                            <!-- Depart DateTime -->
                            <StackPanel Grid.Column="3">
                                <TextBlock Text="Ngày giờ bay" Style="{StaticResource FieldLabelText}" />
                                <TextBox Text="{Binding DepartTime}" d:Text="15:00 31/02/2022}" Style="{StaticResource CustomTextbox}" />
                            </StackPanel>

                            <!-- Flight time -->
                            <StackPanel Grid.Column="4">
                                <TextBlock Text="Thời gian bay" Style="{StaticResource FieldLabelText}" />
                                <TextBox Text="{Binding FlightTime}"
                                         d:Text="180"
                                         materialDesign:TextFieldAssist.SuffixText="phút" Style="{StaticResource CustomTextbox}" />
                            </StackPanel>

                        </Grid>

                    </Grid>
                </Border>
            </Grid>

            <!-- Ticket detail -->
            <Grid Grid.Row="1" Margin="0 20 0 40">
                <Grid.ColumnDefinitions>
                    <!-- Spacing -->
                    <ColumnDefinition Width="2*" />
                    <!-- Overlay aiport and customers -->
                    <ColumnDefinition Width="4.5*" />
                    <!-- Bill and total price  -->
                    <ColumnDefinition Width="3.5*" />
                    <!-- Spacing -->
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <!-- Overlay airport and  bill -->
                    <RowDefinition Height="5.5*" />
                    <!-- Customer and total price  -->
                    <RowDefinition Height="4.5*" />
                </Grid.RowDefinitions>

                <!-- Overlay airport -->
                <Border Grid.Column="1"
                        Grid.Row="0"
                        Background="White"
                        CornerRadius="10"
                        Padding="20" 
                        Margin="0 0 10 0"
                        Style="{StaticResource DropShadow}">
                    <Grid>

                        <Grid.RowDefinitions>
                            <!-- Heading -->
                            <RowDefinition Height="Auto" />
                            <!-- Overlay airports table -->
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>


                        <!-- Heading -->
                        <TextBlock Text="Sân bay trung gian" Grid.Row="0" Style="{StaticResource FieldLabelText}" HorizontalAlignment="Left" />

                        <DataGrid Grid.Row="1"
                                  ItemsSource="{Binding OverlayAirports}"
                                  Margin="0 10 0 0"
                                  ColumnHeaderStyle="{StaticResource DataGridBlackColumnHeader}"
                                  CellStyle="{StaticResource DataGridCellCenter}"
                                  ColumnWidth="*">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Thứ tự" Binding="{Binding Order}" />
                                <DataGridTextColumn Header="Tên sân bay" Binding="{Binding Name}" />
                                <DataGridTextColumn Header="Thời gian dừng" Binding="{Binding OverlayTime}" />
                                <DataGridTextColumn Header="Ghi chú" Binding="{Binding Note}" />
                            </DataGrid.Columns>
                        </DataGrid>

                    </Grid>
                </Border>

                <!-- Customer -->
                <Border Grid.Column="1"
                        Grid.Row="1"
                        Background="White"
                        CornerRadius="10"
                        Padding="20"
                        Margin="0 20 10 0"
                        Style="{StaticResource DropShadow}">
                    <Grid>

                        <Grid.RowDefinitions>
                            <!-- Heading -->
                            <RowDefinition Height="Auto" />
                            <!-- Customers table -->
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>


                        <!-- Heading -->
                        <TextBlock Text="Khách hàng" Grid.Row="0" Style="{StaticResource FieldLabelText}" HorizontalAlignment="Left" />

                        <!-- Customers table -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!-- Name -->
                            <StackPanel Grid.Column="0" Grid.Row="0">
                                <TextBlock Text="Họ tên" Style="{StaticResource FieldLabelText}" />
                                <TextBox Text="{Binding CustomerName}" d:Text="Nguyễn Văn A" Style="{StaticResource CustomTextbox}" Opacity="0.8" />
                            </StackPanel>

                            <!-- ID -->
                            <StackPanel Grid.Column="1" Grid.Row="0">
                                <TextBlock Text="CMND" Style="{StaticResource FieldLabelText}" />
                                <TextBox Text="{Binding CustomerID}" d:Text="333333333" Style="{StaticResource CustomTextbox}" Opacity="0.8" />
                            </StackPanel>

                            <!-- Phone number -->
                            <StackPanel Grid.Column="0" Grid.Row="1">
                                <TextBlock Text="Số điện thoại" Style="{StaticResource FieldLabelText}" />
                                <TextBox Text="{Binding CustomerPhoneNumber}" d:Text="0123456789" Style="{StaticResource CustomTextbox}" Opacity="0.8" />
                            </StackPanel>

                            <!-- Email -->
                            <StackPanel Grid.Column="1" Grid.Row="1">
                                <TextBlock Text="Email" Style="{StaticResource FieldLabelText}" />
                                <TextBox Text="{Binding CustomerEmail}" d:Text="nguyenvana@gmail.com" Style="{StaticResource CustomTextbox}" Opacity="0.8" />
                            </StackPanel>

                        </Grid>

                    </Grid>
                </Border>

                <!-- Bill -->
                <Border Background="White" 
                        Grid.Column="2"
                        Grid.Row="0"
                        CornerRadius="10"
                        Padding="20" 
                        Margin="10 0 0 0"
                        Style="{StaticResource DropShadow}">
                    <Grid>

                        <Grid.RowDefinitions>
                            <!-- Heading -->
                            <RowDefinition Height="Auto" />
                            <!-- Bill table -->
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>


                        <!-- Heading -->
                        <TextBlock Text="Hóa đơn" Grid.Row="0" Style="{StaticResource FieldLabelText}" HorizontalAlignment="Left" Margin="0,-2,0,2" />

                        <!-- Bill table -->
                        <Grid Grid.Row="1" Margin="10 10 10 0">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            
                            <!-- Ticket tier -->
                            <Grid Grid.Row="0" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Hạng vé" Grid.Column="0" FontSize="{StaticResource Small}" />
                                <TextBlock Text="{Binding TicketTier}" d:Text="Phổ thông" Grid.Column="1" HorizontalAlignment="Right" Style="{StaticResource FieldLabelText}"/>
                            </Grid>

                            <!-- Ticket price -->
                            <Grid Grid.Row="1" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Giá vé" Grid.Column="0" FontSize="{StaticResource Small}" />
                                <TextBlock Text="{Binding TicketPrice}" d:Text="920.000 VNĐ" Grid.Column="1" HorizontalAlignment="Right" Style="{StaticResource FieldLabelText}" />
                            </Grid>

                            <!-- Customer paid -->
                            <Grid Grid.Row="2" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Người thanh toán" Grid.Column="0" FontSize="{StaticResource Small}" />
                                <TextBlock Text="{Binding CustomerPaid}" d:Text="Nguyễn Văn A" Grid.Column="1" HorizontalAlignment="Right" Style="{StaticResource FieldLabelText}" />
                            </Grid>

                        </Grid>
                    </Grid>
                </Border>

                <Grid Grid.Column="2" Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    
                    <!-- Total price to pay -->
                    <Border 
                        Grid.Row="0"
                        Background="White" 
                        CornerRadius="10" 
                        Padding="20" 
                        VerticalAlignment="Top"
                        Margin="10 20 0 0" Style="{StaticResource DropShadow}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <!-- Heading -->
                                <RowDefinition Height="Auto" />
                                <!-- Total money -->
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>


                            <!-- Heading -->
                            <TextBlock Text="Thành tiền" Grid.Row="0" Style="{StaticResource FieldLabelText}" HorizontalAlignment="Left" Margin="0,-2,0,2" />
                            <!-- Heading -->
                            <TextBlock Text="{Binding TotalPrice}"
                                       d:Text="2.760.000 VNĐ"
                                       Grid.Row="1"
                                       HorizontalAlignment="Right"
                                       FontSize="{StaticResource Regular}" 
                                       FontWeight="Bold"
                                       Opacity="0.8"/>
                        </Grid>
                    </Border>
                    
                    <!-- Pay button -->
                    <Grid Grid.Row="1" VerticalAlignment="Bottom" Margin="0 20 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*" />
                            <ColumnDefinition Width="6*" />
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="1"   
                        VerticalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        Command="{Binding PayCommand}"                
                        Background="{StaticResource GreenBrush}"                 
                        BorderThickness="0"                
                        materialDesign:ButtonAssist.CornerRadius="5"
                                Height="50">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Thanh toán"  Grid.Column="0" FontSize="{StaticResource Regular}" />
                                <materialDesign:PackIcon Kind="Dollar" Grid.Column="1" VerticalAlignment="Stretch" Width="35" Height="35" />
                            </Grid>
                        </Button>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>

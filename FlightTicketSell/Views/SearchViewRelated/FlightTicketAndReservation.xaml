<UserControl x:Class="FlightTicketSell.Views.SearchViewMore.TicketSoldBooked"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightTicketSell.Views"
             xmlns:vm="clr-namespace:FlightTicketSell.ViewModels" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:valueConverters="clr-namespace:FlightTicketSell.ValueConverters"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1366"
             d:Background="{StaticResource LightGrayBrush}"
             DataContext="{Binding TickedSoldBooked_Search, Source={x:Static vm:ViewModelLocator.Instance}}"
             >
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid SelectiveScrollingGrid.SelectiveScrollingOrientation="Vertical">

        <Grid>
            <Grid.ColumnDefinitions>
                <!-- Spacing -->
                <ColumnDefinition Width="1*" />
                <!-- Content -->
                <ColumnDefinition Width="10*" />
                <!-- Spacing -->
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <!-- Return button -->
            <Button Style="{StaticResource MaterialDesignRaisedDarkButton}"
                Command="{Binding ReturnCommand}"
                Grid.Column="0"
                Grid.RowSpan="2"
                Width="50"
                Height="50"
                ToolTip="Quay lại"
                Background="{StaticResource LightBlueBrush}"
                BorderThickness="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="20 20 10 0"
                materialDesign:ButtonAssist.CornerRadius="5"
                HorizontalContentAlignment="Center" 
                VerticalContentAlignment="Center">
                <materialDesign:PackIcon Kind="ArrowLeft"
                                     Height="30"
                                     Width="30"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center" />
            </Button>

            <!-- Content -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="10*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="10*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                </Grid.RowDefinitions>

                <!--Vé đã bán-->
                <Grid Grid.Row="1">
                    <Border Background="#fff" CornerRadius="8" Style="{StaticResource DropShadow}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <!-- Heading and search bar -->
                                <RowDefinition Height="2*"/>
                                <!-- Ticket sold table -->
                                <RowDefinition Height="8*" />
                            </Grid.RowDefinitions>

                            <!-- Heading and search bar -->
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>

                                </Grid.ColumnDefinitions>

                                <!-- Heading -->
                                <Border Grid.Column="0"
                                    Grid.ColumnSpan="4"
                                    Background="{StaticResource BlueBrush}" 
                                    CornerRadius="8"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                    <TextBlock Text="VÉ ĐÃ BÁN"
                                           Margin="60 5"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontSize="{StaticResource Small}"
                                           FontFamily="{StaticResource RobotoBlack}"
                                           Foreground="White" />
                                </Border>

                                <!-- Search box -->
                                <Border BorderThickness="1"
                                    BorderBrush="{StaticResource GrayBrush}"
                                    CornerRadius="7"
                                    Padding="10 0 10 5"
                                    Margin="0 10 20 0"
                                    Width="250"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center">
                                    <Grid>

                                        <Grid.ColumnDefinitions>
                                            <!-- Search box -->
                                            <ColumnDefinition Width="*" />
                                            <!-- Search button -->
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Search box -->
                                        <TextBox Grid.Column="0"
                                             VerticalAlignment="Center"
                                             materialDesign:HintAssist.Hint="Mã vé"
                                             Text="{Binding Search_IDSold}"
                                             FontSize="{StaticResource RealSmall}"
                                             Style="{StaticResource MaterialDesignFloatingHintTextBox}">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="TextChanged">
                                                    <i:InvokeCommandAction Command="{Binding LoadCommand1}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </TextBox>

                                        <!-- Search button -->
                                        <Button Grid.Column="1"
                                        VerticalAlignment="Center" 
                                        Background="Transparent" 
                                        Foreground="{StaticResource GrayBrush}" 
                                        BorderThickness="0"
                                        Command="{Binding LoadCommand1}">
                                            <!-- Trigger -->
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="SelectedChange">
                                                    <i:InvokeCommandAction Command="{Binding LoadCommand1}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>

                                            <!-- Icon -->
                                            <materialDesign:PackIcon Kind="Magnify" Height="25" Width="25"/>
                                        </Button>
                                    </Grid>
                                </Border>
                            </Grid>

                            <DataGrid
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  Grid.Row="1"
                                  Background="Transparent"
                                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                  Margin="20,8,20,0"
                                  ColumnHeaderStyle="{StaticResource DataGridBlackColumnHeader}"
                                  CellStyle="{StaticResource DataGridCellCenter}"
                                  ColumnWidth="*"
                                  ItemsSource="{Binding Tickets}"
                                  d:ItemsSource="{d:SampleData ItemCount=5}"
                                  CanUserSortColumns="True"
                                  CanUserAddRows="False"
                                  RowHeight="50"
                                  AutoGenerateColumns="False"
                                  materialDesign:DataGridAssist.CellPadding="13 8 8 8"
                                  materialDesign:DataGridAssist.ColumnHeaderPadding="8" Grid.RowSpan="2">
                                <DataGrid.Columns>

                                    <DataGridTextColumn                                    
                                        IsReadOnly="True"
                                        Binding="{Binding DisplayTicketID}"
                                        Header="Mã vé"
                                        EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}" />

                                    <DataGridTemplateColumn Header="Tên khách hàng" Width="250" IsReadOnly="True">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="150" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Flight code -->
                                                    <TextBlock Grid.Column="0"
                                                               Text="{Binding TenKhachHang}"
                                                               VerticalAlignment="Center"
                                                               HorizontalAlignment="Left"/>

                                                    <!-- Detail button -->
                                                    <Button Content="Chi tiết"
                                                            Grid.Column="1"
                                                            Style="{StaticResource FlightDetailButton}"
                                                            Command="{Binding Open_Window_DescriptionCustomer_Command}" />
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- set a max length to get an indicator in the editor -->
                                    <materialDesign:DataGridTextColumn
                                        IsReadOnly="True"
                                        Binding="{Binding TenHangVe}"
                                        Header="Tên hạng vé"
                                        EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}" />
                                    <materialDesign:DataGridTextColumn
                                        Binding="{Binding DisplayPayDate}"
                                        Header="Ngày thanh toán"
                                        EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}"/>
                                    <materialDesign:DataGridTextColumn
                                        Binding="{Binding DisplayTicketPrice}"
                                        Header="Giá tiền"
                                        EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>

                    </Border>
                </Grid>

                <!--Chỗ đã đặt-->
                <Grid Grid.Row="3">
                    <Border Background="#fff" CornerRadius="8" Style="{StaticResource DropShadow}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <!-- Heading and search bar -->
                                <RowDefinition Height="2*"/>
                                <!-- Ticket sold table -->
                                <RowDefinition Height="8*" />
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" VerticalAlignment="Center">

                                <!-- Heading -->
                                <Border Grid.Column="0"
                                    Grid.ColumnSpan="4"
                                    Background="{StaticResource BlueBrush}" 
                                    CornerRadius="8"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                    <TextBlock Text="CHỖ ĐÃ ĐẶT"
                                           Margin="60 5"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontSize="{StaticResource Small}"
                                           FontFamily="{StaticResource RobotoBlack}"
                                           Foreground="White" />
                                </Border>

                                <!-- Search box -->
                                <Border BorderThickness="1"
                                    BorderBrush="{StaticResource GrayBrush}"
                                    CornerRadius="7"
                                    Padding="10 0 10 5"
                                    Margin="0 10 20 0"
                                    Width="250"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center">
                                    <Grid>

                                        <Grid.ColumnDefinitions>
                                            <!-- Search box -->
                                            <ColumnDefinition Width="*" />
                                            <!-- Search button -->
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Search box -->
                                        <TextBox Grid.Column="0"
                                             VerticalAlignment="Center"
                                             materialDesign:HintAssist.Hint="Mã đặt chỗ"
                                             Text="{Binding Search_IDBooked}"
                                             FontSize="{StaticResource RealSmall}"
                                             Style="{StaticResource MaterialDesignFloatingHintTextBox}">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="TextChanged">
                                                    <i:InvokeCommandAction Command="{Binding LoadCommand1}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </TextBox>

                                        <!-- Search button -->
                                        <Button Grid.Column="1"
                                        VerticalAlignment="Center" 
                                        Background="Transparent" 
                                        Foreground="{StaticResource GrayBrush}" 
                                        BorderThickness="0"
                                        Command="{Binding LoadCommand1}">
                                            <!-- Trigger -->
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="SelectedChange">
                                                    <i:InvokeCommandAction Command="{Binding LoadCommand1}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>

                                            <!-- Icon -->
                                            <materialDesign:PackIcon Kind="Magnify" Height="25" Width="25"/>
                                        </Button>
                                    </Grid>
                                </Border>
                            </Grid>

                            <DataGrid
                                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  Background="Transparent"
                                  Margin="20 8 20 0"
                                  Grid.Row="1"
                                  ItemsSource="{Binding PlaceReservations}"
                                  d:ItemsSource="{d:SampleData ItemCount=5}"
                                  ColumnHeaderStyle="{StaticResource DataGridBlackColumnHeader}"
                                  CellStyle="{StaticResource DataGridCellCenter}"
                                  ColumnWidth="Auto"
                                  CanUserSortColumns="True"
                                  CanUserAddRows="False"
                                  AutoGenerateColumns="False"
                                  RowHeight="50"
                                  materialDesign:DataGridAssist.CellPadding="13 8 8 8"
                                  materialDesign:DataGridAssist.ColumnHeaderPadding="8">
                                <DataGrid.Columns>

                                    <DataGridTextColumn IsReadOnly="True"
                                    Width="100"
                                    Binding="{Binding DisplayReservationID}"
                                    Header="Mã đặt chỗ"
                                    EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}" />

                                    <DataGridTemplateColumn Header="Tên khách hàng" IsReadOnly="True">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="100" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Flight code -->
                                                    <TextBlock Grid.Column="0"
                                                               Text="{Binding TenKhachDat}"
                                                               VerticalAlignment="Center"
                                                               HorizontalAlignment="Left"/>

                                                    <!-- Detail button -->
                                                    <Button Content="Chi tiết"
                                                            Grid.Column="1"
                                                            Style="{StaticResource FlightDetailButton}"
                                                            Command="{Binding Open_Window_DescriptionCustomer_Command}" />
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    
                                    <!-- set a max length to get an indicator in the editor -->
                                    <materialDesign:DataGridTextColumn IsReadOnly="True"
                                    Width="100"
                                    Binding="{Binding SoCho}"
                                    Header="Số chỗ"
                                    EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}" />
                                    
                                    <!-- Tên hạng vé -->
                                    <materialDesign:DataGridTextColumn IsReadOnly="True"
                                    Width="200"
                                    Binding="{Binding TenHangVe}"
                                    Header="Tên hạng vé"
                                    EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}"/>

                                    <!-- Ngày đặt vé -->
                                    <materialDesign:DataGridTextColumn IsReadOnly="True"
                                    Width="175"
                                    Binding="{Binding DisplayBookDate}"
                                    Header="Ngày đặt vé"
                                    EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}"/>

                                    <!-- Giá tiền / vé -->
                                    <materialDesign:DataGridTextColumn IsReadOnly="True"
                                    Width="175"
                                    Binding="{Binding DisplayReservationPrice}"
                                    Header="Giá tiền / Vé"
                                    EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}"/>

                                    <!-- Trạng thái -->
                                    <DataGridTemplateColumn Header="Trạng thái" IsReadOnly="True">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="70" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Flight code -->
                                                    <TextBlock Grid.Column="0"
                                                               Text="{Binding BookingState, Mode=OneWay, Converter={valueConverters:BookingStateToStringConverter}}"
                                                               Foreground="{Binding BookingState, Mode=OneWay, Converter={valueConverters:BookingStateToColorConverter}}"
                                                               VerticalAlignment="Center"
                                                               HorizontalAlignment="Left"/>

                                                    <!-- Booking change button -->
                                                    <Button ToolTip="Đổi vé"
                                                            Grid.Column="1"
                                                            Background="{StaticResource GreenBrush}"
                                                            BorderThickness="0"
                                                            Command="{Binding ShowMoreCommand}">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="Xem " />
                                                            <materialDesign:PackIcon Kind="TicketAccount" VerticalAlignment="Center" />
                                                        </StackPanel>
                                                    </Button>
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>

                    </Border>
                </Grid>
            </Grid>

        </Grid>
        
    </Grid>
</UserControl>

<UserControl x:Class="FlightTicketSell.Views.SearchViewMore.TicketSoldBooked"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightTicketSell.Views"
             xmlns:vm="clr-namespace:FlightTicketSell.ViewModels" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800"
             DataContext="{Binding TickedSoldBooked_Search, Source={x:Static vm:ViewModelLocator.Instance}}"
             >
    <!--<UserControl.DataContext>
        <vm:SearchViewModel/>
    </UserControl.DataContext>-->

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid Background="{StaticResource LightGrayBrush}" SelectiveScrollingGrid.SelectiveScrollingOrientation="Vertical">
        <Border Height="70" VerticalAlignment="Top" Background="{StaticResource BlueBrush}" >

        </Border>
        <Grid Margin="50,20,50,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="300"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="400"></RowDefinition>
            </Grid.RowDefinitions>

            <!--Vé đã bán-->
            <Grid Grid.Row="0">
                <Border Background="#fff" CornerRadius="8" Margin="35 0 20 0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1.5*"></RowDefinition>
                            <RowDefinition Height="8*"></RowDefinition>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*"></ColumnDefinition>
                                <ColumnDefinition Width="2*"></ColumnDefinition>
                                <ColumnDefinition Width="1*"></ColumnDefinition>
                                <ColumnDefinition Width="3*"></ColumnDefinition>
                                <ColumnDefinition Width="1*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <Button Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                Command="{Binding ReturnCommand}"
                                Grid.Column="0"
                                Width="50"
                                Height="45"
                                ToolTip="Resource name: MaterialDesignRaisedLightDarkButton"
                                Background="{StaticResource LightBlueBrush}"
                                VerticalAlignment="Top"
                                Margin="-225 0 0 0"
                                materialDesign:ButtonAssist.CornerRadius="5"
                                HorizontalContentAlignment="Center" 
                                VerticalContentAlignment="Center">
                                <materialDesign:PackIcon Kind="ArrowLeft"
                                                     Height="30"
                                                     Width="30"
                                                     HorizontalAlignment="Left"
                                                     VerticalAlignment="Top" />
                            </Button>

                            <Border Grid.Column="1" CornerRadius="7" Height="35" Background="{StaticResource BlueBrush}" >
                                <TextBlock Margin="21,0,0,0" Foreground="#fff" VerticalAlignment="Center" HorizontalAlignment="Center"  FontFamily="{StaticResource RobotoBlack}" FontSize="{StaticResource Small}">VÉ ĐÃ BÁN</TextBlock>
                            </Border>

                            <TextBox
                                Grid.Column="3"
                                materialDesign:HintAssist.Hint="Mã vé"
                                Text="{Binding Search_IDSold}"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}" >
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="TextChanged">
                                        <i:InvokeCommandAction Command="{Binding LoadCommand1}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </TextBox>
                            <Button Grid.Column="4"
                                    VerticalAlignment="Center" 
                                    Background="Transparent" 
                                    Foreground="Black" 
                                    BorderThickness="0"
                                    Command="{Binding LoadCommand1}">
                                <materialDesign:PackIcon Kind="SearchWeb" Height="30" Width="30"/>
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="SelectedChange">
                                        <i:InvokeCommandAction Command="{Binding LoadCommand1}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>
                        </Grid>

                        <DataGrid ScrollViewer.VerticalScrollBarVisibility="Disabled"
                            ScrollViewer.HorizontalScrollBarVisibility="Auto"
                            Margin="20 8 20 0"
                            Grid.Row="1"
                            ColumnHeaderStyle="{StaticResource DataGridBlackColumnHeader}"
                            CellStyle="{StaticResource DataGridCellCenter}"
                            ColumnWidth="*"
                            ItemsSource="{Binding TickedSolds}"
                            CanUserSortColumns="True"
                            CanUserAddRows="False"
                            AutoGenerateColumns="False"
                            materialDesign:DataGridAssist.CellPadding="13 8 8 8"
                            materialDesign:DataGridAssist.ColumnHeaderPadding="8">
                            <DataGrid.Columns>

                                <DataGridTextColumn                                    
                                    Binding="{Binding MaVe}"
                                    Header="Mã vé"
                                    EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}" />

                                <DataGridTemplateColumn Header="Tên khách hàng">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <TextBlock Text="{Binding TenKhachHang}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                <Button Content="Chi tiết" Margin="30 0 0 0" Background="{StaticResource LightBlueBrush}" 
                                                Command="{Binding Open_Window_DescriptionCustomer_Command}"
                                                
                                                />
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- set a max length to get an indicator in the editor -->
                                <materialDesign:DataGridTextColumn
                                    Binding="{Binding TenHangVe}"
                                    Header="Tên hạng vé"
                                    EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}" />
                                <materialDesign:DataGridTextColumn
                                    Binding="{Binding NgayThanhToan}"
                                    Header="NgayThanhToan"
                                    EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}"/>
                                <materialDesign:DataGridTextColumn
                                    Binding="{Binding GiaTien}"
                                    Header="Giá tiền"
                                    EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>

                </Border>
            </Grid>

            <!--Chỗ đã đặt-->
            <Grid Grid.Row="2">
                <Border Background="#fff" CornerRadius="8" Margin="35 0 20 0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1.5*"></RowDefinition>
                            <RowDefinition Height="8*"></RowDefinition>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*"></ColumnDefinition>
                                <ColumnDefinition Width="2*"></ColumnDefinition>
                                <ColumnDefinition Width="1*"></ColumnDefinition>
                                <ColumnDefinition Width="3*"></ColumnDefinition>
                                <ColumnDefinition Width="1*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <Button Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                Command="{Binding ReturnCommand}"
                                Grid.Column="0"
                                Width="50"
                                Height="45"
                                ToolTip="Resource name: MaterialDesignRaisedLightDarkButton"
                                Background="{StaticResource LightBlueBrush}"
                                VerticalAlignment="Top"
                                Margin="-225 0 0 0"
                                materialDesign:ButtonAssist.CornerRadius="5"
                                HorizontalContentAlignment="Center" 
                                VerticalContentAlignment="Center">
                                <materialDesign:PackIcon Kind="ArrowLeft"
                                                     Height="30"
                                                     Width="30"
                                                     HorizontalAlignment="Left"
                                                     VerticalAlignment="Top" />
                            </Button>
                            <Border Grid.Column="1" CornerRadius="7" Height="35" Background="{StaticResource BlueBrush}" >
                                <TextBlock Margin="21,0,0,0" Foreground="#fff" VerticalAlignment="Center" HorizontalAlignment="Center"  FontFamily="{StaticResource RobotoBlack}" FontSize="{StaticResource Small}">CHỖ ĐÃ ĐẶT</TextBlock>
                            </Border>

                            <TextBox
                                Grid.Column="3"
                                materialDesign:HintAssist.Hint="Mã đặt chỗ" 
                                Text="{Binding Search_IDBooked}"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="TextChanged">
                                        <i:InvokeCommandAction Command="{Binding LoadCommand1}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </TextBox>
                            <Button Grid.Column="4"
                                    VerticalAlignment="Center" 
                                    Background="Transparent" 
                                    Foreground="Black" 
                                    BorderThickness="0"
                                    Command="{Binding LoadCommand1}">
                                <materialDesign:PackIcon Kind="SearchWeb" Height="30" Width="30"/>
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="SelectedChange">
                                        <i:InvokeCommandAction Command="{Binding LoadCommand1}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>
                        </Grid>

                        <DataGrid ScrollViewer.VerticalScrollBarVisibility="Disabled"
                            ScrollViewer.HorizontalScrollBarVisibility="Auto"
                            Margin="20 8 20 0"
                            Grid.Row="1"
                            ItemsSource="{Binding Bookeds}"
                            ColumnHeaderStyle="{StaticResource DataGridBlackColumnHeader}"
                            CellStyle="{StaticResource DataGridCellCenter}"
                            ColumnWidth="*"
                            CanUserSortColumns="True"
                            CanUserAddRows="False"
                            AutoGenerateColumns="False"
                            materialDesign:DataGridAssist.CellPadding="13 8 8 8"
                            materialDesign:DataGridAssist.ColumnHeaderPadding="8">
                            <DataGrid.Columns>

                                <DataGridTextColumn
                                    Width="100"
                                    Binding="{Binding MaDatCho}"
                                    Header="Mã đặt chỗ"
                                    EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}" />

                                <DataGridTemplateColumn Header="Tên khách hàng">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <TextBlock Text="{Binding TenKhachHang}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                <Button Content="Chi tiết" Margin="30 0 0 0" Background="{StaticResource LightBlueBrush}" 
                                                Command="{Binding Open_Window_DescriptionCustomer_Command}"
                                                />
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <!-- set a max length to get an indicator in the editor -->
                                <materialDesign:DataGridTextColumn
                                    Width="100"
                                    Binding="{Binding SoCho}"
                                    Header="Số chỗ"
                                    EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}" />
                                <materialDesign:DataGridTextColumn
                                    Width="200"
                                    Binding="{Binding TenHangVe}"
                                    Header="Tên hạng vé"
                                    EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}"/>
                                <materialDesign:DataGridTextColumn
                                    Width="175"
                                    Binding="{Binding NgayDatVe}"
                                    Header="Ngày đặt vé"
                                    EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}"/>
                                <materialDesign:DataGridTextColumn
                                    Width="175"
                                    Binding="{Binding GiaTien_Ve}"
                                    Header="Giá tiền / Vé"
                                    EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>

                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>

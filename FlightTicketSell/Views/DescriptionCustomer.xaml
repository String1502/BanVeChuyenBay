                                materialDesign:HintAssist.Hint=""
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

                            <!--Số điện thoại-->
                            <Grid Grid.Row="2" Grid.Column="0">
                                <TextBlock Margin="10,10,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="{StaticResource RobotoBlack}" FontSize="{StaticResource RealSmall}">Số điện thoại</TextBlock>
                            </Grid>
                            <TextBox
                                Margin="10 0 10 0"
                                Grid.Row="3" Grid.Column="0"
                                materialDesign:HintAssist.Hint=""
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

                            <!--Email-->
                            <Grid Grid.Row="2" Grid.Column="1">
                                <TextBlock Margin="10,10,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="{StaticResource RobotoBlack}" FontSize="{StaticResource RealSmall}">Email</TextBlock>
                            </Grid>
                            <TextBox
                                Margin="10 0 10 0"
                                Grid.Row="3" Grid.Column="1"
                                materialDesign:HintAssist.Hint=""
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>

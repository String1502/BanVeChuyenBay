                                <TextBlock Margin="10,10,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="{StaticResource RobotoBlack}" FontSize="{StaticResource RealSmall}">CMND</TextBlock>
                            </Grid>
                            <TextBox
                                Margin="10 0 10 0"
                                Grid.Row="1" Grid.Column="1"
                                materialDesign:HintAssist.Hint=""
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

                            <!--Số điện thoại-->
                            <Grid Grid.Row="2" Grid.Column="0">
                                <TextBlock Margin="10,10,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="{StaticResource RobotoBlack}" FontSize="{StaticResource RealSmall}">Số điện thoại</TextBlock>
                            </Grid>
                            <TextBox
                                Margin="10 0 10 0"
                                Grid.Row="3" Grid.Column="0"
                                materialDesign:HintAssist.Hint=""
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

                            <!--Email-->
                            <Grid Grid.Row="2" Grid.Column="1">
                                <TextBlock Margin="10,10,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="{StaticResource RobotoBlack}" FontSize="{StaticResource RealSmall}">Email</TextBlock>
                            </Grid>
                            <TextBox
                                Margin="10 0 10 0"
                                Grid.Row="3" Grid.Column="1"
                                materialDesign:HintAssist.Hint=""
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                        </Grid>
                    </Grid>
                </Border>
            </Grid>

            <Grid Grid.Row="4">
                <Border Background="#fff" CornerRadius="8" Margin="35 0 20 0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="33.333"></RowDefinition>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBlock Margin="21,0,0,0" Grid.Row="0" VerticalAlignment="Bottom"  FontFamily="{StaticResource RobotoBlack}" FontSize="{StaticResource Small}" Grid.Column="2" >Khách hàng 03</TextBlock>

                        <Grid Grid.Row="1" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"></ColumnDefinition>
                                <ColumnDefinition Width="1*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"></RowDefinition>
                                <RowDefinition Height="1*"></RowDefinition>
                                <RowDefinition Height="1*"></RowDefinition>
                                <RowDefinition Height="1*"></RowDefinition>
                            </Grid.RowDefinitions>

                            <!--Họ tên-->
                            <Grid Grid.Row="0" Grid.Column="0">
                                <TextBlock Margin="10,10,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="{StaticResource RobotoBlack}" FontSize="{StaticResource RealSmall}">Họ tên</TextBlock>
                            </Grid>
                            <TextBox
                                Margin="10 0 10 0"

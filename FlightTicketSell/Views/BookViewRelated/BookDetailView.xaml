<UserControl x:Class="FlightTicketSell.Views.BookDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightTicketSell.Views" xmlns:vm="clr-namespace:FlightTicketSell.ViewModels" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"             
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:BookDetailViewModel />
    </UserControl.DataContext>
    
    <Grid>
        <!-- Return button -->
        <Button Style="{StaticResource MaterialDesignRaisedDarkButton}"
                Command="{Binding ReturnCommand}"
                Grid.Column="0"
                Grid.RowSpan="2"
                Width="50"
                Height="50"
                ToolTip="Resource name: MaterialDesignRaisedLightDarkButton"
                Background="{StaticResource LightBlueBrush}"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="20 20 10 0"
                materialDesign:ButtonAssist.CornerRadius="5"
                HorizontalContentAlignment="Center" 
                VerticalContentAlignment="Center">
            <materialDesign:PackIcon Kind="ArrowLeft"
                                     Height="30"
                                     Width="30"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center" />
        </Button>
        
        <!-- Content -->
        <Grid Margin="120 20 120 20">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*" ></RowDefinition>
                <RowDefinition Height="0.5  *"></RowDefinition>
                <RowDefinition Height="10.5*"></RowDefinition>
                
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" >
                <Border  Background="White" CornerRadius="10" Style="{StaticResource ResourceKey=DropShadow}" >
                    <Grid>
                        
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" ></RowDefinition>
                            <RowDefinition Height="3*"></RowDefinition>
                        </Grid.RowDefinitions>
                        
                        <!-- Heading -->
                        <TextBlock Padding="20,5,0,0" FontSize="20" VerticalAlignment="Center" Grid.Row="0"  FontWeight="Bold"> Chi tiết chuyến bay </TextBlock>

                        <!-- Flight detail fields -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"></ColumnDefinition>
                                <ColumnDefinition Width="3*"></ColumnDefinition>
                                <ColumnDefinition Width="1*"></ColumnDefinition>
                                <ColumnDefinition Width="3*"></ColumnDefinition>
                                <ColumnDefinition Width="1*"></ColumnDefinition>
                                <ColumnDefinition Width="3*"></ColumnDefinition>
                                <ColumnDefinition Width="1*"></ColumnDefinition>
                                <ColumnDefinition Width="3*"></ColumnDefinition>
                                <ColumnDefinition Width="1*"></ColumnDefinition>
                                <ColumnDefinition Width="3*"></ColumnDefinition>
                                <ColumnDefinition Width="1*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock FontWeight="Bold">Mã chuyến bay</TextBlock>
                                <TextBox>TSNNB-8</TextBox>
                            </StackPanel>

                            <StackPanel Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock FontWeight="Bold">Sân bay đi</TextBlock>
                                <TextBox>Tân Sơn Nhất</TextBox>
                            </StackPanel>

                            <StackPanel Grid.Column="5" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock FontWeight="Bold">Sân bay đến</TextBlock>
                                <TextBox>Nội Bài</TextBox>
                            </StackPanel>

                            <StackPanel Grid.Column="7" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock FontWeight="Bold">Ngày giờ bay</TextBlock>
                                <TextBox>15:00 31/2/2022</TextBox>
                            </StackPanel>

                            <StackPanel Grid.Column="9" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock FontWeight="Bold">Số điểm dừng</TextBlock>
                                <TextBox>0</TextBox>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>

            <Grid Grid.Row="2" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="4.5*"></RowDefinition>
                    <RowDefinition Height="0.5*"></RowDefinition>
                    <RowDefinition Height="2.5*"></RowDefinition>
                    <RowDefinition Height="3*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="8*"></ColumnDefinition>
                    <ColumnDefinition Width="0.3*"></ColumnDefinition>
                    <ColumnDefinition Width="5*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                
                <!--Khách hàng đặt chỗ-->
                <Border Grid.Row="0"  Background="White" CornerRadius="10" Style="{StaticResource ResourceKey=DropShadow}" >
                    <Grid>
                        <Grid.RowDefinitions>
                          <RowDefinition Height="1.2*"></RowDefinition>
                          <RowDefinition Height="3*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.ColumnSpan="2" Padding="20,5,0,0" FontSize="20" VerticalAlignment="Center" Grid.Row="0"  FontWeight="Bold"> Khách hàng đặt chỗ</TextBlock>

                        <StackPanel Width="200" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock FontWeight="Bold">Họ Tên</TextBlock>
                            <TextBox>Đoàn Gia Bảo</TextBox>
                            <TextBlock FontWeight="Bold">Số điện thoại</TextBlock>
                            <TextBox>0834002706</TextBox>
                        </StackPanel>

                        <StackPanel Width="200" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock FontWeight="Bold">CMND/CCCD</TextBlock>
                            <TextBox>312602950</TextBox>
                            <TextBlock FontWeight="Bold">Email</TextBlock>
                            <TextBox>doangiabao276@gmail.com</TextBox>
                        </StackPanel>
                    </Grid>
                </Border>
<!--Hạng vé-->
                <Border Grid.Row="2"  Background="White" CornerRadius="10" Style="{StaticResource ResourceKey=DropShadow}" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"></RowDefinition>
                            <RowDefinition Height="2*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.ColumnSpan="2" Padding="20,5,0,0" FontSize="20" VerticalAlignment="Center" Grid.Row="0"  FontWeight="Bold"> Hạng vé</TextBlock>

                        <ComboBox Width="200" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top"
                                            materialDesign:HintAssist.Hint="Hạng vé"
                                            ItemsSource="{Binding LongListToTestComboVirtualization}"
                                            Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                            <ComboBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel/>
                                </ItemsPanelTemplate>
                            </ComboBox.ItemsPanel>
                        </ComboBox>

                        <Grid Width="200" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="top">
                            <TextBox                               
                                materialDesign:HintAssist.Hint="Giá tiền"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                        </Grid>
                    </Grid>
                </Border>
<!--Khách hàng thụ hưởng-->
                <Border Grid.Row="0" Grid.RowSpan="3"  Grid.Column="2"  Background="White" CornerRadius="10" Style="{StaticResource ResourceKey=DropShadow}" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"></RowDefinition>
                            <RowDefinition Height="5.5*"></RowDefinition>
                        </Grid.RowDefinitions>

                        <TextBlock Padding="20,5,0,0" FontSize="20" VerticalAlignment="Center" Grid.Row="0" Grid.ColumnSpan="2" FontWeight="Bold">Khách hàng thụ hưởng vé</TextBlock>

                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"></RowDefinition>
                                <RowDefinition Height="1*"></RowDefinition>
                                <RowDefinition Height="1*"></RowDefinition>
                                <RowDefinition Height="1*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5*"></ColumnDefinition>
                                <ColumnDefinition Width="3*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            
                            <StackPanel Grid.Row="0" Width="200"   HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Grid.Column="0" FontWeight="Bold">Khách hàng 01</TextBlock>
                                <TextBox Grid.Column="0" >Tên khách hàng 01</TextBox>
                             </StackPanel>
                            <Button  
                                    Grid.Column="1"
                                    Content="Nhập thông tin"
                                    Grid.Row="0"
                                    BorderThickness="0"
                                    Background="ForestGreen"
                                    Command="{Binding ContinueCommand}"
                                    Width="110"
                                    Height="22"
                                    FontSize="10"
                                    HorizontalAlignment="Left"
                                    materialDesign:ShadowAssist.Darken="True"
                                    >
                            </Button>

                            <StackPanel  Width="200" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock  Grid.Column="0" FontWeight="Bold">Khách hàng 02</TextBlock>
                                <TextBox Grid.Column="0">Tên khách hàng 02</TextBox>
                            </StackPanel>
                            <Button 
                                    Grid.Column="1"
                                    Content="Nhập thông tin"
                                    Grid.Row="1"
                                    BorderThickness="0"
                                    Background="ForestGreen"
                                    Command="{Binding ContinueCommand}"
                                    Width="110"
                                    Height="22"
                                    FontSize="10"
                                    HorizontalAlignment="Left"
                                    materialDesign:ShadowAssist.Darken="True">
                            </Button>

                            <StackPanel Width="200" Grid.Row="2"  HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Grid.Column="0" FontWeight="Bold">Khách hàng 03</TextBlock>
                                <TextBox Grid.Column="0">Tên khách hàng 03</TextBox>
                            </StackPanel>
                            <Button 
                                    Grid.Column="1"
                                    Content="Nhập thông tin"
                                    Grid.Row="2"
                                    BorderThickness="0"
                                    Background="ForestGreen"
                                    Command="{Binding ContinueCommand}"
                                    Width="110"
                                    Height="22"
                                    FontSize="10"
                                    HorizontalAlignment="Left"
                                    materialDesign:ShadowAssist.Darken="True">
                            </Button>

                            <StackPanel Width="200" Grid.Row="3"  HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Grid.Column="0" FontWeight="Bold">Khách hàng 04</TextBlock>
                                <TextBox Grid.Column="0">Tên khách hàng 04</TextBox>
                            </StackPanel>
                            <Button 
                                    Grid.Column="1"
                                    Content="Nhập thông tin"
                                    Grid.Row="3"
                                    BorderThickness="0"
                                    Background="ForestGreen"
                                    Command="{Binding ContinueCommand}"
                                    Width="110"
                                    Height="22"
                                    FontSize="10"
                                    HorizontalAlignment="Left"
                                    materialDesign:ShadowAssist.Darken="True">
                            </Button>

                        </Grid>

                    </Grid>
                    

                </Border>
                <Button 
                Content="Tiếp tục"
                Grid.Row="4"
                Grid.ColumnSpan="3"
                BorderThickness="0"
                Background="OrangeRed"
                Command="{Binding ContinueCommand}"
                Width="150"
                Height="50"
                FontWeight="Bold"
                FontSize="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                materialDesign:ShadowAssist.Darken="True">
                </Button>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
